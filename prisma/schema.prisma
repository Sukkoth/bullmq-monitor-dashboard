generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  user      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
}

model session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique(map: "sqlite_autoindex_session_2")
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
}

model user {
  id            String    @id
  name          String
  email         String    @unique(map: "sqlite_autoindex_user_2")
  emailVerified Int
  image         String?
  role          String    @default("user")
  banned        Boolean   @default(false)
  createdAt     DateTime
  updatedAt     DateTime
  account       account[]
  session       session[]
  redisConfigs  RedisConfig[] @relation("OwnedConfigs")
  queues        Queue[]      @relation("OwnedQueues")
  
  // Authorized (Shared)
  authorizedRedisConfigs RedisConfig[] @relation("AuthorizedConfigs")
  authorizedQueues       Queue[]      @relation("AuthorizedQueues")
}

model verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime
  updatedAt  DateTime

  @@index([identifier])
}
model RedisConfig {
  id        String   @id @default(cuid())
  name      String
  host      String
  port      Int      @default(6379)
  username  String?
  password  String?
  db        Int      @default(0)
  tls       Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      user     @relation("OwnedConfigs", fields: [userId], references: [id], onDelete: Cascade)
  queues    Queue[]

  // Authorized Users (Shared with)
  authorizedUsers user[] @relation("AuthorizedConfigs")

  @@index([userId])
}

model Queue {
  id              String      @id @default(cuid())
  name            String      // Queue name (internal identifier)
  displayName     String      // Human-readable display name
  note            String?     // Optional description
  tags            String      @default("[]") // JSON array of tags
  redisConfigId   String
  redisConfig     RedisConfig @relation(fields: [redisConfigId], references: [id], onDelete: Cascade)
  userId          String
  user            user        @relation("OwnedQueues", fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Authorized Users (Shared with)
  authorizedUsers user[] @relation("AuthorizedQueues")

  @@index([userId])
  @@index([redisConfigId])
}
